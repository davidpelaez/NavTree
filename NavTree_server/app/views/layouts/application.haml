!!! XML
%html
	%head
		%meta{ "http-equiv" => "content-type", "content" =>"text/html;charset=UTF-8"} 
		= stylesheet_link_tag 'login', 'navtree'
		-if params[:controller] == "clearance/sessions" then 
			-@title = "Sign In - " 
		-elsif params[:controller] == "clearance/users" then 
			-@title = "Sign Up - "
		-else
			-@title = ""
		%title= "#{@title}NavTree"
		= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js'

		:javascript

			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-25332722-1']);
			_gaq.push(['_trackPageview']);

			(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();   

		:css
			.wrapper{
				width: 460px !important;
				margin: 0 auto;	
			}

			body{
				margin-top: 80px;
			}
	%body
		.wrapper
			#flash
				-flash.each do |key, msg|
					= content_tag :span, msg, :id => key, :class => "flash"
					%br=#Otherwise no line break!
			= yield
		=facebook_js