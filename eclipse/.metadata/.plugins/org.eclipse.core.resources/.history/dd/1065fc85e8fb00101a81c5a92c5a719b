	private void addEdge(int fromId, int toParentId) {
		Edge e = new Edge(fromId, toParentId);
		if (edgeCount == edges.length) {
			edges = (Edge[]) PApplet.expand(edges);
		}
		edges[edgeCount++] = e;
	}

