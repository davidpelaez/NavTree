	//TODO: Modify the behaviour because all nodes will be added when find is to be used

	public Node findNode(String label) {
		label = label.toLowerCase();
		Node n = (Node) nodeTable.get(label);
		if (n == null) {
			return addNode(label);
		}
		return n;

